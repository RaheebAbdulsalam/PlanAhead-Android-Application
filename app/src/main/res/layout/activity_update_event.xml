<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".events.UpdateEventActivity">

    <!-- Title -->
    <EditText
        android:id="@+id/title_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/hint_event_title"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:autofillHints="Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Date and Time Section -->
    <LinearLayout
        android:id="@+id/date_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title_input_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/date_button_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/hint_event_date"
            android:minHeight="48dp"
            android:onClick="onDateButtonClick"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/time_button_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/hint_event_time"
            android:minHeight="48dp"
            android:onClick="onTimeButtonClick"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <!-- Address Section (address, postcode, and city) -->
    <EditText
        android:id="@+id/address_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/hint_event_address"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/date_time_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="postalAddress"
        tools:ignore="VisualLintTextFieldSize" />

    <LinearLayout
        android:id="@+id/postcode_city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/address_input_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/postcode_input_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_event_postcode"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            android:autofillHints="postalCode"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/city_input_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_event_city"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            android:autofillHints="city"
            tools:ignore="VisualLintTextFieldSize" />
    </LinearLayout>


    <!-- Notes Section -->
    <EditText
        android:id="@+id/notes_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/hint_event_note"
        android:inputType="text"
        android:minHeight="48dp"
        android:autofillHints="text"
        app:layout_constraintTop_toBottomOf="@+id/postcode_city_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- Buttons -->
    <Button
        android:id="@+id/update_button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="@string/button_update"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/notes_input_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_delete"
        android:textAllCaps="false"
        android:textColor="@color/lightRed"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_button"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
